						  <div class="card-body">
									
							<div class="form-group">
								<!-- top Content -->
								<div class="row">
									<div class="col-md-6">
										<div class="card-title">
											<h5><%= tasks.title %></h5>
										</div>
										<div class="text-muted">
											<p class="tx-10">
												Assigned By: <code><%= tasks.assignedBy %></code>
											</p>
										</div>
									</div>
									<div class="col-md-6 float-right">
										<table class="table table-striped " >
											<thead class="border-info">
												<tr>
													<th>
														Status
													</th>
													<th>
														Assignee
													</th>
													<th>
