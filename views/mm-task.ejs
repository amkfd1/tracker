												</tr>
											</thead>
											<tbody>
												
													<tr>
														<td class="text-success">
															<%= tasks.status %>
															
														</td>
								
														<td>
															<%= tasks.taskFor %>
														</td>
								
														<td>
															<%= tasks.deadline %>
														</td>

															<td>
																
																
																<div class="d-flex justify-content-center align-items-center">
																	
