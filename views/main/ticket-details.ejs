  <script src="../../../assets/vendors/dropzone/dropzone.min.js"></script>
	<script src="../../../assets/vendors/dropify/dist/dropify.min.js"></script>
  <script src="../../../assets/js/bootstrap-maxlength.js"></script>
	<!-- end plugin js for this page -->
